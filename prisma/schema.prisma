generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id
  clerkId String?
  name String @unique
  imageurl String?
  email String
  podcast Podcast[]
}
model Podcast{
  id String @id
  podcastTitle String 
  podcastDescription String
  imageUrl String
  audioUrl String
  imageStorageId String
  audioStorageId String
   author String
   authorId String
   authorImageUrl String
   audioPrompt String
   imagePrompt String
   audioDuration Int
   voiceType String
   views Int
   userId String
   user User @relation(fields: [userId],references: [id]) 
}